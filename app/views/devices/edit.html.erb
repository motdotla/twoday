<%= form_for @device, method: :put do |f| -%>

  <p>
    <%= f.label :name %>
    <br/>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :ip_address %>
    <br/>
    <%= f.text_field :ip_address %>
  </p>

  <% @device.device_type.controls.each do |control| %>
    <p>
      <%= f.label control.name %>
      <br/>
      <%= f.text_field "control_#{control.id}" %>
    </p>
  <% end %>

  <%= f.submit %>
<% end %>
